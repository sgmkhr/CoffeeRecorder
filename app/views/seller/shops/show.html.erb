<div class="text-center d-flex">
  <h4><%= @shop.name %></h4>
</div>

<div class="text-right">
  <%= link_to seller_new_coffee_posts_path do %>
    <i class="fa-solid fa-circle-plus"></i>
  <% end %>
</div>
<% @coffees.each do |coffee| %>
  <div class="d-flex justify-content-center">
    <div class="d-flex">
      <div class="bordered col-md-5 col-12 m-md-1 my-1 mx-0">
        <%= coffee.name %>
      </div>
    </div>
  </div>
<% end %>
<div class="text-center">
  <%= paginate @coffees, page: "coffee_page", theme: "bootstrap-5" %>
</div>

<div class="text-right">
  <%= link_to seller_new_information_posts_path do %>
    <i class="fa-solid fa-circle-plus"></i>
  <% end %>
</div>
<% @informations.each do |information| %>
  <!--後ほど作成-->
<% end %>
<div class="text-center">
  <%= paginate @informations, page: "information_page", theme: "bootstrap-5" %>
</div>