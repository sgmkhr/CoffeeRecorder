<div class="link-navi">
  <%= link_to I18n.t("seller.shops.index.title"), seller_shops_path %><span> ＞</span>
  <%= link_to I18n.t("seller.shops.show.title"), seller_shop_path(@shop.id) %><span> ＞</span>
  <%= I18n.t("seller.information_posts.show.title") %>
</div>

<div class="main-container row">
  <div class="col-md-6">
    <div class="mb-3 d-flex justify-content-center">
      <%= image_tag @information.get_information_image(300, 300), class: "d-md-block d-sm-none d-none" %>
      <%= image_tag @information.get_information_image(270, 270), class: "d-md-none d-sm-block d-none" %>
      <%= image_tag @information.get_information_image(240, 240), class: "d-md-none" %>
    </div>
  </div>
  <div class="col-md-6">
    <p><%= @information.title %></p>
    <div>
      <p><%= @information.body %></p>
    </div>
    <div class="text-right">
      <span class="mr-1">
        <%= render "partials/view_count", viewed_post: @information %>
      </span>
      <%= link_to I18n.t("btn.edit"), edit_seller_shop_information_post_path(@shop.id, @information.id), class: "btn border rounded" %>
    </div>
  </div>
</div>
