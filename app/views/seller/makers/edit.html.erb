<%= render "layouts/errors", obj: @maker %>
<%= form_with model: @maker do |f| %>
  <div class="form-group row justify-content-center">
    <%= f.label :company_name, class: "col-4" %>
    <%= f.text_field :company_name, autofocus: true, class: "col-8 form-control" %>
  </div>

  <div class='"form-group row justify-content-center'>
    <%= f.label :email, class: "col-4" %>
    <%= f.email_field :email, class: "col-8 form-control" %>
  </div>

  <div class="actions">
    <%= f.submit I18n.t("btn.update"), class: "btn btn-sm" %>
  </div>
<% end %>

<%= link_to I18n.t("seller.makers.destroy.btn"), seller_maker_path(@maker.id), method: :delete,
    class: "mt-3", "data-confirmation" => I18n.t("seller.makers.destroy.confirmation") %>

<div class="navigation">
  <%= link_to "#" do %> <!--後ほどリンク先設定予定-->
    <i class="fa-solid fa-chevron-left"></i>
  <% end %>
</div>