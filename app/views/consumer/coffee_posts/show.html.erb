<div class="link-navi">
  <%= link_to I18n.t("consumer.homes.title"), root_path %><span> ＞</span>
  <%= link_to I18n.t("consumer.coffee_posts.index.title"), coffee_posts_path %><span> ＞</span>
  <%= I18n.t("consumer.coffee_posts.show.title") %>
</div>

<div class="main-container">
  <div class="row">
    <div class="col-md-6">
      <div>
        <%= image_tag @coffee.get_coffee_image(300, 300) %>
      </div>
    </div>
    <div class="col-md-6 mt-md-3">
      <p class="overflow-hidden text-nowrap text-truncate">
        <i class="fa-solid fa-tablets"></i><%= @coffee.name %>
      </p>
      <p class="overflow-hidden text-nowrap text-truncate">
        <i class="fa-solid fa-store"></i><%= @coffee.shop.name %>
      </p>
      <p>
        <%= I18n.t("activerecord.attributes.coffee_post.online_sale") + "：" %>
        <% if @coffee.online_sale %>
          <%= I18n.t("consumer.coffee_posts.show.online_sale.true") %>
        <% else %>
          <%= I18n.t("consumer.coffee_posts.show.online_sale.false") %>
        <% end %>
      </p>
      <p><%= I18n.t("activerecord.attributes.coffee_post.brewing") + "：" + @coffee.scene_i18n %></p>
      <p><%= I18n.t("activerecord.attributes.coffee_post.roasting") + "：" + @coffee.brewing_i18n %></p>
      <p><%= I18n.t("activerecord.attributes.coffee_post.grind_size") + "：" + @coffee.rate_i18n %></p>
      <p><%= I18n.t("activerecord.attributes.coffee_post.sweetness") + "：" + @coffee.sweetness_i18n %></p>
      <p><%= I18n.t("activerecord.attributes.coffee_post.acidity") + "：" + @coffee.acidity_i18n %></p>
      <p><%= I18n.t("activerecord.attributes.coffee_post.bitterness") + "：" + @coffee.bitterness_i18n %></p>
      <p><%= I18n.t("activerecord.attributes.coffee_post.strength") + "：" + @coffee.strength_i18n %></p>
      <p><%= I18n.t("activerecord.attributes.coffee_post.aftertaste") + "：" + @coffee.aftertaste_i18n %></p>
      <p><%= @coffee.supplement %></p>
    </div>
  </div>
  <div>
    <p><%= @coffee.introduction %></p>
  </div>
</div>
