<% if coffee_post.bookmarked_by?(current_user) %>
  <%= link_to shop_coffee_post_bookmarks_path(current_user.id, coffee_post.id), method: :delete, remote: true do %>
    <i class="fa-solid fa-bookmark"></i>
  <% end %>
<% else %>
  <%= link_to shop_coffee_post_bookmarks_path(current_user.id, coffee_post.id), method: :post, remote: true do %>
    <i class="fa-regular fa-bookmark"></i>
  <% end %>
<% end %>