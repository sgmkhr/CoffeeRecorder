<% if records.any? %>
  <div class="d-flex justify-content-around flex-wrap">
    <% records.each do |record| %>
      <%= link_to user_record_path(current_user.id, record.id), class: "index-card" do %>
        <div class="card-image">
          <%= image_tag record.get_record_image(200, 150) %>
        </div>
        <hr class="mb-1">
        <p class="overflow-hidden text-nowrap text-truncate mb-0">
          <i class="fa-solid fa-tablets"></i> <%= record.coffee_name %>
        </p>
        <p class="overflow-hidden text-nowrap text-truncate mb-0">
          <i class="fa-solid fa-store"></i> <%= record.shop_name %>
        </p>
        <p class="mb-0"><%= I18n.t("activerecord.attributes.record.rate") %>ï¼š<%= record.rate_i18n %></p>
        <p class="mb-"><%= record.created_at.strftime("%Y/%m/%d") %></p>
      <% end %>
    <% end %>
  </div>
<% end %>
<div class="text-center">
  <% if records.any? %>
    <%= paginate records, theme: "bootstrap-5", params: { current_tab: tab_name } %>
  <% else %>
    <%= I18n.t("consumer.records.index.no_exist") %>
  <% end %>
</div>