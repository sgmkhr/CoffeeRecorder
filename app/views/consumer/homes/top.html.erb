<ul id="tab-menu" class='d-flex justify-content-center'>
  <li><a href="#main_tab" class="main_tab"><i class="fa-solid fa-tablets"></i></a></li>
  <li><a href="#new_record_tab" class="new_record_tab"><i class="fa-solid fa-tablets"></i></a></li>
  <li><a href="#index_tab" class="index_tab"><i class="fa-solid fa-tablets"></i></a></li>
</ul>

  
<div id="tab-contents">
  <div id="main_tab" class="tab">
    <!--後ほど実装予定-->
  </div>
  
  <div id="new_record_tab" class="tab">
    <%= render "consumer/records/form", record: @record %>
  </div>
  
  <div id="index_tab" class="tab">
    <%= render "consumer/records/index", records: @records %>
  </div>
</div>

<script>
  $("#tab-contents .tab").hide();
  $(".<%= @current_tab %>").addClass("active");
  $($(".<%= @current_tab %>").attr("href")).show();
  event.preventDefault();
</script>
<%= javascript_pack_tag "tabs" %>