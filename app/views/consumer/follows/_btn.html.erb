<% if shop.followed_by?(current_user) %>
  <%= link_to I18n.t("consumer.follows.btn.unfollow"), shop_follows_path(shop.id), method: :delete, remote: true, class: "btn btn-sm unfollow-btn" %>
<% else %>
  <%= link_to I18n.t("consumer.follows.btn.follow"), shop_follows_path(shop.id), method: :post, remote: true, class: "btn btn-sm follow-btn" %>
<% end %>